<h3 class="title"><%= l(:label_people_choose_manager) %></h3>

<%= form_tag(add_manager_people_path,
             :remote => true,
             :method => :post,
             :id => 'new-manager-form',
             :class => 'select-users') do %>

    <p><%= label_tag 'user_search', l(:label_user_search) %><%= text_field_tag 'user_search', nil %></p>
    <%= javascript_tag "observeSearchfield('user_search', 'users_for_manager', '#{ escape_javascript url_for(:controller => :people, :action => :autocomplete_for_manager, :id => person) }')" %>

    <fieldset>
      <div id="users_for_manager" >
        <%= people_principals_radio_button_tags('id', managers) %>
      </div>
    </fieldset>

    <p class="buttons">
      <%= submit_tag l(:button_add), :name => nil, :onclick => "hideModal(this);" %>
      <%= submit_tag l(:button_cancel), :name => nil, :onclick => "hideModal(this);", :type => 'button' %>
    </p>
<% end %>
